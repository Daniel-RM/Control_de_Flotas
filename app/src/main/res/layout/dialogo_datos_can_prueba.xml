        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="@string/fecha"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
